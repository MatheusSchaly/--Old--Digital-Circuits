module topo_vlg_vec_tst();
// constants                                           
// general purpose registers
reg [1:0] KEY;
// wires                                               
wire [6:0] HEX0;
wire [9:0] LEDR;

wire sampler;                             

// assign statements (if any)                          
topo i1 (
// port map - connection between master ports and signals/registers   
	.HEX0(HEX0),
	.KEY(KEY),
	.LEDR(LEDR)
);

// KEY[1]
always
begin
	KEY[1] = 1'b0;
	KEY[1] = #5000 1'b1;
	#5000;
end 

// KEY[0]
always
begin
	KEY[0] = 1'b0;
	KEY[0] = #20000 1'b1;
	#20000;
end 

topo_vlg_sample_tst tb_sample (
	.KEY(KEY),
	.sampler_tx(sampler)
);

topo_vlg_check_tst tb_out(
	.HEX0(HEX0),
	.LEDR(LEDR),
	.sampler_rx(sampler)
);
endmodule

